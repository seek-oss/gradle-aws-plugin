root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.json]
bin=node
indent_style = space
indent_size = 2

[**.xml]
indent_style = space
indent_size = 4

[**.py]
indent_style = space
indent_size = 4

[**.gradle]
indent_style = space
indent_size = 4

[**.{yml,yaml}]
indent_style = space
indent_size = 2

[**.scala]
indent_style = space
indent_size = 2
